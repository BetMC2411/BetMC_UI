{
  "namespace": "progress",

  "modal_progress_screen@progress_screen": {
    "$screen_bg_content": "betmc_common.empty_panel"
  },

  "delete_progress_screen@modal_progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },

  "world_loading_progress_screen@progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },
  
  "overworld_loading_progress_screen@world_loading_progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },

  "nether_loading_progress_screen@world_loading_progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },

  "theend_loading_progress_screen@world_loading_progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },

  "world_saving_progress_screen@progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },
  
  "world_convert_modal_progress_screen@progress.progress_screen": {
    "$screen_bg_content": "betmc_background.betmc_static_background_not_use_gradient"
  },

  "world_convert_modal_progress_screen_content": {
    "modifications": [
      {
        "control_name": "mobile_data_icon",
        "operation": "remove"
      },
      {
        "control_name": "title_panel_content",
        "operation": "remove"
      },
      {
        "control_name": "world_modal_progress_panel",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          { "world_modal_progress_panel@betmc_progress.world_modal_progress_panel": {} }
        ]
      }
    ]
  },
  
  "realms_loading_world_modal_progress_screen_content": {
    "modifications": [
      {
        "control_name": "mobile_data_icon",
        "operation": "remove"
      },
      {
        "control_name": "realms_title_image",
        "operation": "remove"
      },
      {
        "control_name": "world_modal_progress_panel",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          { "world_modal_progress_panel@betmc_progress.world_modal_progress_panel": {} }
        ]
      }
    ]
  },

  "world_save_modal_progress_screen_content": {
    "modifications": [
      {
        "control_name": "save_icon",
        "operation": "remove"
      },
      {
        "control_name": "title_panel_content",
        "operation": "remove"
      },
      {
        "control_name": "world_modal_progress_panel",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          { "save_world_modal_progress_panel@betmc_progress.save_world_modal_progress_panel": {} }
        ]
      }
    ]
  }
}