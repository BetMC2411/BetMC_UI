{
  "tier_label_locked": { //REPLACE COLOR LABEL
    "color": "$trade_tier_name_color"
  },
  
  "tier_stack_panel": {
    "bindings": [
      {
        "binding_name": "#tier_visible",
        "binding_name_override": "(not #visible)", //SHOW ALL ITEMS THAT VILLAGERS SELL
        "binding_type": "collection",
        "binding_collection_name": "$collection_name",
        "binding_condition": "always"
      }
    ]
  },

  "trade_toggle": {
    "$toggle_enabled_binding_name": "#idk", // DECEPTION TOGGLE
    "$toggle_binding_type": "global",
    "$toggle_enabled_binding_condition": "none"
  },

  "arrow_holder": {
    "modifications": [ //REMOVE LOCK IMAGE
      { "control_name": "lock_image", "operation": "remove" }
    ]
  },

  "arrow_holder/arrow_image": { //REMOVE BINDINGS
    "bindings": [
      { "binding_type": "collection_details" }
    ]
  },

  "item_slots_stack_panel/ingredient_item_2_holder": { //ALWAYS SHOW SECOND SLOT
    "ignored": false
  }
}